type Book {
  id: ID!
  uuid: String!
  title: String!
  description: String!
}

type Query {
  findAllBooks(pageNumber: Int , pageSize: Int): [Book]!
  countBooks: Long!
}

type Mutation {
  newBook(title: String!, description: String!) : Book!
  deleteBook(uuid:String!) : Boolean
  updateBook(newTitle: String,newDescription : String, uuid:String!) : Book!
}
