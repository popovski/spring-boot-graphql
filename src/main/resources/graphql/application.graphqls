type Book {
  id: ID!
  uuid: String!
  title: String!
  description: String!
}

type Query {
  findAllBooks(pageNumber: Int , pageSize: Int): [Book]!
  findByUuid(uuid: String!) : Book
  countBooks: Long!
}

input BookInput {
  title: String!,
  description: String!
}

type Mutation {
  newBook(book:BookInput) : Book!
  deleteBook(uuid:String!) : Boolean
  updateBook(book:BookInput, uuid:String!) : Book!
}
